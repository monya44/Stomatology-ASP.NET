@using Dent.Data.Identity
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<ApplicationUser>


<h1>User List</h1><br />


<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Email
            </th>
            <th style="width:10%">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.UserName
                            </a>
                            <br>
                            <small>
                                @user.Id
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <a>
                        @user.Email
                    </a>
                </td>
                <td>
                    <div class="dropdown">
                    <button class="btn btn-info dropdown-toggle" type="button" id="dropButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Edit
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropButton1">
                    <li><a class="dropdown-item" asp-controller="userroles" asp-action="Index" asp-route-userId="@user.Id">Give Roles</a></li>
                    <li><a class="dropdown-item" asp-controller="userroles" asp-action="Delete" asp-route-userId="@user.Id">Delete Roles</a></li>
                    </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>